<div class="card">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h2>{{title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="0hdhh6e">
            <i class="fa fa-times"></i> Delete

        </button>
    </div>
    <div class="car-body">
        <p>{{description}}</p>   
        <div class="text-center">
            <img src="/public/upload/{{filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-item-center">
        <button class="btn btn-success" id="btn-like" data-id="{{filename}}">
            <i class="fas fa-thumbs-up"></i>Like
        </button>
        <p>
            <span class="likes-count">{{likes}}</span>
            
            <i class="fas fa-heart"></i>

        </p>
        <p>
            <i class="fas fa-eye"></i>{{views}}
        </p>        
        <p>
            <i class="far fa-clock"></i>
            {{ tiempocomentario images.timestamp }}
        </p>

    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i>Publica un Comentario
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Tu Comentario"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i>Publicar
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">

            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{ tiempocomentario images.timestamp }}
                        </footer>
                    </blockquote>
                </div>
            </li>


        </ul>

    </div>
</div>