<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header" style="background-color: #7c7aaa;">
                <h3 class="card-title  text-white">
                    <i class="far fa-image"></i>Producto
                </h3>
            </div>
           product.uniqueProd : {{product.uniqueProd}}
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>{{product.name}}</h2>   
                <button class="btn btn-danger" id="btn-delprod" data-id="{{product.uniqueProd}}">
                    <i class="fa fa-times"></i> Delete
                </button>
            </div>
            <div class="car-body">
                <div class="text-center">
                    <img src="/public/upload/product/{{product.filename}}" alt="" class="grande img-fluid">
                </div>
                <div class="row col-md-12">
                    {{#each ingredients as |value key|}}
                    <div class="row col-md-3">
                        <a href="/products/{{uniqueProd}}/{{image_id}}">
                            <img src="/public/upload/ingredient/{{filename}}" alt="" class="pequeña img-thumbnail">
                        </a>
                        {{name}}
                    </div>
                    {{/each}}
                </div>
                <div class="text-center">
                    <div class="col-md-6">
                        <h5>
                            <p>Precio : $ {{product.precio}}</p>
                        </h5>
                    </div>
                    <div class="col-md-12">
                        <h5>
                            <p>Detalles  : {{product.product}}</p>
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <button class="btn btn-success" id="btn-likeprd" data-id="{{product.filename}}">
                    <i class="fas fa-thumbs-up"></i>Like
                </button>
                <p>
                    <span class="likes-count">{{product.likes}}</span>
                    <i class="fas fa-heart"></i>
                </p>
                <p>
                    <i class="fas fa-eye"></i>{{product.views}}
                </p>
                <p>
                    <i class="far fa-clock"></i>
                    {{ tiempocomentario product.timestamp }}
                </p>
            </div>
        </div>
        <div class="card mt-2">
            <div class="card-header text-white" style="background-color: #7c7aaa;">
                <h3 class="card-title  text-white">
                    <i class="far fa-images"></i> Ingredientes
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    {{#each ingredients as |value key|}}
                    <div class="card text center">
                        <div class="card-header bg-info text-white d-flex  justify-content-between align-items-center">
                            {{name}}
                        </div>
                        <a href="/products/{{uniqueProd}}/{{image_id}}">
                            <img src="/public/upload/ingredient/{{filename}}" alt="" class="mediana img-thumbnail">
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="card mt-2">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Ingredientes</h3>
                <button class="btn btn-info" id="btn-toggle-comment">
                    <i class="fa fa-comment-o"></i>Agrega Ingredientes
                </button>
            </div>
            <div class="card-body">
                <blockquote id="post-comment">
                    <form action="/products/{{product.uniqueProd}}/ingredient" enctype="multipart/form-data"
                        method="POST">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" name="image" class="custom-file-input" id="inputGroup"
                                        aria-describedby="inputGroupFileAddon" required>
                                    <label class="custom-file-label" for="inputGroupFile">Seleccione Imagen de
                                        Ingrediente</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre de Ingrediente">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="description" placeholder="Descripción ">
                        </div>
                        <div class="form-group">
                            <input type="int" class="form-control" name="amount" placeholder="Cantidad (grm)">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" id="btn-comment">
                                <i class="fa fa-comment"></i>Guardar Ingrediente
                            </button>
                        </div>
                    </form>
                </blockquote>
                <ul class="list-group p-4">
                    <li class="list-group-item">
                        <div class="row">
                            <blockquote class="col">
                                <p class="lead">{{comment}}</p>
                                <footer class="blockquote-footer">
                                    {{comment.name}} - {{ tiempocomentario timestamp }}
                                </footer>
                            </blockquote>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card mt-2">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Comentarios</h3>
                <button class="btn btn-info" id="btn-toggle-comment">
                    <i class="fa fa-comment-o"></i>Publica un Comentario
                </button>
            </div>
            <!--      {{image.uniqueId}} -->
            <div class="card-body">
                <blockquote id="post-comment">
                    <form action="/products/{{product.uniqueProd}}/comment" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre Comentarista">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <textarea name="comment" rows="2" class="form-control"
                                placeholder="Tu Comentario"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" id="btn-comment">
                                <i class="fa fa-comment"></i>Publicar
                            </button>
                        </div>
                    </form>
                </blockquote>
                <ul class="list-group p-4"> 
                    <li class="list-group-item">
                        <div class="row">
                            <a href="#" class="col text-center">
                                <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                            </a>
                            <blockquote class="col">
                                <p class="lead">{{commentprod}}</p>
                                <footer class="blockquote-footer">
                                    {{commentprod.name}} - {{ tiempocomentario timestamp }}
                                </footer>
                            </blockquote>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-2">
            <div class="card-header bg-dark text-white">
                <h5><i class="far fa-chart-bar"></i>Producto</h5>
            </div>
            <div class="card-body">
                <!--        <p><i class="fas fa-comments"></i> Productos : {{sidebar.stats.totalprod}}</p> -->
                <p><i class="fas fa-eye"></i> Vistas : {{sidebarprod.views}}</p>
                <p><i class="fas fa-heart"></i> Likes : {{sidebarprod.likes}}</p>
                <p><i class="fas fa-comments"></i> Comentarios : {{sidebarprod.totalcomm}}</p>
            </div>
        </div>
        <div class="card mb-2">
            <div class="card-header bg-dark text-white">
                <h5><i class="far fa-chart-bar"></i>Materiales</h5>
            </div>
            <div class="card-body">
                <!--        <p><i class="fas fa-images"></i> imagenes : {{sidebarprod.stats.images}}</p> -->
                <p><i class="fas fa-comments"></i> Materiales : {{sidebarprod.totalprod}}</p>
            </div>
        </div>
        <div class="card mb-2">
            <div class="card-header bg-dark text-white">
                <h5><i class="far fa-fire"></i>Composición del Producto</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {{#each sidebarimg.popularprd}}
                    <div class="col-md-4">
                        <a href="/products/{{uniqueProd}}/{{image_id}}">
                            <img src="/public/upload/product/{{filename}}" class="w-100 h-100 image-thumbnail">
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="card mt-2">
            <div class="card-header bg-dark text-white">
                <h5><i class="fas fa-comments"></i>Comentarios</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        {{#each sidebarprod.commentsprod}}
                        <blockquote class="w-100">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">
                                <span>{{name}}</span>
                                <!--                                    <span>{{ comment.timestamp}}</span>
-->
                            </footer>
                        </blockquote>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>