{{#if sidebar.commentsimg}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-comments"></i>Comentarios Productos</h5>

    </div>
    <div class="card-body">
        {{#each sidebar.commentsimg}}
<!--        image_id : {{image_id}}
 uniqueProd : {{uniqueProd}}
filename : {{filename}}  -->
        <div class="row">
            <div class="col">
                <a href="/images/{{product.uniqueProd}}">
                    <img src="/public/upload/{{product.filename}}" class="img-thumbnail w-70">
                </a>
            </div>
            <div class="col">
                <blockquote class="w-100">
                    <p>{{comment}}</p>
                    <footer class="blockquote-footer">
                        <span>{{name}}</span>
                        <span>{{tiempocomentario timestamp}}</span>

                    </footer>
                </blockquote>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}